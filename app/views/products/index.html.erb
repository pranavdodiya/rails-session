<h2>All Products</h2>
<table class="table table-dark">
<thead>
    <tr>
    <th>product name</th>
    <th>price</th>
    <th>edit</th>
    <th>delete</th>
    <th>add to cart</th>
    </tr>
</thead>
<tbody>
<% @products.each do |product| %>
  <tr>
  <th><%= product.name %> </th>
  <th><%= product.price%></th>

    
  <th><%= link_to "Edit", edit_product_path(product) %></th>
  <th><%= link_to "Delete", product_path(product), method: :delete, data: {confirm: "Are you sure?"} %>
    </th>
    <th><%= link_to "Add ", add_cart_path(product) %></th>
    </tr>
<% end%>
</tbody>
</table>

<%= link_to "New product", new_product_path %>