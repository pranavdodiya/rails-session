<table class="table table-dark">
<thead>
    <tr>
    <th>product name</th>
    <th>price</th>
    <th>quantity</th>
    <th>total price</th>
    <th>add</th>
    <th>remove</th>
    </tr>
</thead>
<tbody>
<% session[:product_id].uniq.each do |p| %>
    <tr>
    <th>
    <%= Product.find(p).name %></th>
    <th>
    <%= Product.find(p).price %></th>
    <th>
    <%= session[:product_id].count(p)%></th>
    <th><%= (Product.find(p).price)*session[:product_id].count(p)%></th>
    <th><%=link_to "add",add_cart_path(p),:class => "btn btn-success"%></th>
    <th><%=link_to "remove",delete_cart_path(p),:class => "btn btn-success"%></th>
</tr>
<%end%>
</table>
<%= link_to "back", root_path, :class=>"btn btn-danger"%>
